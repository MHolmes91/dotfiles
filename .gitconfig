[user]
	email = contact@markholm.es
	name = Mark Holmes

[core]
	editor = nvim
 
[color]
	branch = auto
	decorate = auto
	diff = auto
	grep = auto
	interactive = auto
	log = auto
	showbranch = auto
	status = auto
	ui = auto

[diff]
	algorithm = patience
	autoRefreshIndex = true
	indentHeuristic = true
	mnemonicprefix = true
	renames = true

[fetch]
	recurseSubmodules = true

[grep]
	extendedRegexp = true

[merge]
	ff = true
	conflictstyle = diff3
	verbosity = 3
